{
  "$schema": "http://json-schema.org/schema",
  "$id": "CRUD",
  "title": "CRUD Services Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the services.",
      "type": "string"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the services.",
      "visible": false,
      "$default": {
        "$source": "workingDirectory"
      }
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
   },
  "required": [
    "name"
  ]
}